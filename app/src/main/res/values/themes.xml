<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BlueX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BlueX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/attractive_blue</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/neon_blue</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/neon_green</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/attractive_blue</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>

        <!-- Text styles -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <!-- Card style -->
    <style name="Widget.Material3.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeColor">@color/surface_variant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Button style -->
    <style name="Widget.Material3.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/attractive_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>